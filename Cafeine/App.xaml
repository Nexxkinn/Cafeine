<Application
    x:Class="Cafeine.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Cafeine"
    xmlns:r="using:Cafeine.Views.Resources">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <r:Template />
            </ResourceDictionary.MergedDictionaries>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="LegacyDarkBlue" Color="#202225" />
                    <SolidColorBrush x:Key="CafeineDarkBlue" Color="#FF262A2F" />
                    <SolidColorBrush x:Key="CafeineBlue" Color="#FF2F343B" />
                </ResourceDictionary>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="CafeineDarkBlue" Color="#202225" />
                    <SolidColorBrush x:Key="LegacyDarkBlue" Color="#FF262A2F" />
                    <SolidColorBrush x:Key="CafeineBlue" Color="#FF2F343B" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
