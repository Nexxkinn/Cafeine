<Page
    x:Class="Cafeine.Views.SearchPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Cafeine.Views"
    xmlns:m="using:Cafeine.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="using:Prism.Windows.Mvvm"
    xmlns:vr="using:Cafeine.Views.Resources"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <vr:Template />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Opacity="0.5"
            Orientation="Vertical">
            <FontIcon
                Margin="0,12"
                FontSize="32"
                Glyph="&#xE11A;" />
            <TextBlock FontSize="18" Text="Ravioli ravioli..." />
        </StackPanel>
        <ScrollViewer>
            <StackPanel
                x:Name="results"
                Margin="28,0,0,0"
                x:Load="{x:Bind Vm.LoadResults, Mode=OneWay}"
                Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                Orientation="Vertical">
                <TextBlock
                    FontSize="20"
                    FontWeight="SemiBold"
                    Text="From library" />
                <GridView ItemsSource="{x:Bind Vm.OfflineResults, Mode=OneWay}">
                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="m:ItemLibraryModel">
                            <Grid>
                                <TextBlock Text="{x:Bind Path=Service['default'].Title, Mode=OneWay}" />
                            </Grid>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
                <TextBlock
                    FontSize="20"
                    FontWeight="SemiBold"
                    Text="Online results" />
                <GridView
                    x:Name="onlineresultgridview"
                    ContainerContentChanging="GridView_ContainerContentChanging"
                    ItemTemplate="{StaticResource OnlineSearchResult}"
                    ItemsSource="{x:Bind Vm.OnlineResults, Mode=OneWay}" />
                <ProgressRing HorizontalAlignment="Left" IsActive="{x:Bind Vm.OnlineResultsProgressRing, Mode=OneWay}" />
            </StackPanel>

        </ScrollViewer>
    </Grid>
</Page>
