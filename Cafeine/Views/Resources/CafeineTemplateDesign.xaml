<ResourceDictionary
    x:Class="Cafeine.Views.Resources.Template"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:m="using:Cafeine.Models">

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <RevealBorderBrush
                x:Key="CustomReveal"
                Opacity="0.5"
                TargetTheme="Light" />
        </ResourceDictionary>
        <ResourceDictionary x:Key="Dark">
            <RevealBorderBrush
                x:Key="CustomReveal"
                Opacity="0.5"
                TargetTheme="Dark" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>


    <DataTemplate x:Name="Collection" x:DataType="m:ItemLibraryModel">
        <Grid
            x:Name="item"
            Width="140"
            Height="252">
            <Grid.RowDefinitions>
                <RowDefinition Height="198" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.Triggers>
                <EventTrigger>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetName="item"
                                Storyboard.TargetProperty="Opacity"
                                From="0"
                                To="1"
                                Duration="0:0:1">
                                <DoubleAnimation.EasingFunction>
                                    <ExponentialEase EasingMode="EaseOut" Exponent="5" />
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Grid.Triggers>
            <Image
                x:Name="CoverImage"
                Grid.Row="0"
                MaxWidth="140"
                MaxHeight="198"
                Margin="2,2,2,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Opacity="0"
                RelativePanel.AlignLeftWithPanel="True"
                Stretch="Fill" />
            <TextBlock
                x:Name="thetitle"
                Grid.Row="1"
                Margin="8,4,8,0"
                CharacterSpacing="14"
                FontSize="14"
                FontWeight="SemiBold"
                Foreground="#D1D1D1"
                Text="{x:Bind Path=Service['default'].Title, Mode=OneWay}"
                TextTrimming="CharacterEllipsis"
                TextWrapping="Wrap" />
        </Grid>
        <!--<Grid x:Name="quickstatus" Grid.Row="0" PointerEntered="ImageEntered" PointerExited="ImageExited" Height="228" Width="150" HorizontalAlignment="Center" Canvas.ZIndex="1" Opacity="0">
                <Grid.Resources>
