<!--  Template for MainPage.xaml  -->
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Cafeine.Views.Resources.MainPage"
    xmlns:m="using:Cafeine.Models">
    <DataTemplate x:Name="Collection" x:DataType="m:ServiceItem">
        <Grid
            x:Name="item"
            Width="140"
            Height="252"
            Background="{ThemeResource CafeineBlue}"
            DataContext="{x:Bind}">
            <Grid.RowDefinitions>
                <RowDefinition Height="198" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.Triggers>
                <EventTrigger>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetName="item"
                                Storyboard.TargetProperty="Opacity"
                                From="0"
                                To="1"
                                Duration="0:0:1">
                                <DoubleAnimation.EasingFunction>
                                    <ExponentialEase EasingMode="EaseOut" Exponent="5" />
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Grid.Triggers>
            <Image
                x:Name="cover"
                Grid.Row="0"
                MaxWidth="140"
                MaxHeight="198"
                Margin="2,2,2,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Opacity="0"
                RelativePanel.AlignLeftWithPanel="True"
                Stretch="Fill" />
            <TextBlock
                x:Name="thetitle"
                Grid.Row="1"
                Margin="8,4,8,0"
                CharacterSpacing="14"
                FontSize="14"
                FontWeight="SemiBold"
                Text="{x:Bind Path=Title, Mode=OneWay}"
                TextTrimming="CharacterEllipsis"
                TextWrapping="Wrap" />
        </Grid>
