<UserControl
    x:Class="Cafeine.Views.Wizard.EpisodeListControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Cafeine.Views.Wizard"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Image
            x:Name="Thumbnail"
            Grid.RowSpan="2"
            Grid.Column="0"
            Width="72"
            Height="41"
            Visibility="Collapsed" />
        <TextBlock
            x:Name="episodenumber"
            Grid.Row="0"
            Grid.Column="1"
            x:Load="{x:Bind LoadEpisodeNumber, Mode=OneWay}"
            FontWeight="SemiBold"
            Text="{x:Bind Item.GenerateEpisodeNumber(), Mode=OneWay}" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="1"
            Width="270"
            Text="{x:Bind Item.Files[0].FileName, Mode=OneWay}"
            TextWrapping="Wrap" />
        <Button
            x:Name="DeleteButton"
            Grid.Row="2"
            Grid.Column="1"
            HorizontalAlignment="Right"
            Canvas.ZIndex="1"
            Content="Del" />
    </Grid>
</UserControl>
